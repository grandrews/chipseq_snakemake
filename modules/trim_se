rule trim_se:
     input: "samples/{sample}.raw.fastq.gz"
     output: "samples/{sample}.fastq.gz"
     threads: 1
     shell: 
         """
         java -jar {config[path]}trimmomatic-0.36.jar SE -phred33 -threads {threads} \
         {input} {output} LEADING:3 TRAILING:3 SLIDINGWINDOW:4:15 MINLEN:36
         """
     