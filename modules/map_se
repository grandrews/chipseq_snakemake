rule align_se:
     input: "reads/{sample}.fastq.gz"
     output: "aln/{sample}.raw.bam"
     threads: 10
     message: "aligning"
     params: 
        prefix = "{sample}"
     shell: 
         """
         bwa mem -M -k 32 -t {threads} config["genome"] {input} | 
         samtools view -@ {threads} -Su - | samtools sort -T {params.prefix} -@ {threads} -o {output.raw_bam}
         """
     